<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
    <RadzenStack Gap="0">
        <RadzenText TextStyle="TextStyle.Subtitle1" Class="rz-mb-0"><strong>@customer.FullName</strong></RadzenText>
        <RadzenText TextStyle="TextStyle.Body2" Class="rz-mb-0">@customer.Address</RadzenText>
        <RadzenText TextStyle="TextStyle.Caption" Class="rz-mb-0">@customer.City, @customer.Country</RadzenText>
    </RadzenStack>
</RadzenStack>

@code {
    [Parameter]
    public Customer customer { get; set; } = new Customer();
}

